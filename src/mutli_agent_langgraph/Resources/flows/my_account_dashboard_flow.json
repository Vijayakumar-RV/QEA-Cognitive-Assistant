{
  "application_url": "https://automationteststore.com/index.php?rt=account/account",
  "page_id": "my_account_page",
  "page_name": "My Account Dashboard",
  "description": "Provides access to various user account functionalities such as editing information, changing password, viewing order history, managing addresses, newsletter subscriptions, and logging out.",
  "before_page": ["home_page", "login_page"],
  "after_page": [
    "edit_account_page",
    "order_history_page",
    "address_book_page",
    "newsletter_page",
    "logout_page"
  ],
  "tags": ["login", "logout", "account", "user_dashboard", "authenticated", "account_navigation"],
  "variants": [
    
    {
      "variant_id": "user_not_logged_in",
      "user_state": "not_logged_in",
      "description": "User is not logged in. Page displays login form and guest/register options.",
      "elements": [
        {
          "element_id": "input_login_name",
          "label": "Login Name",
          "action_type": "input",
          "locator": {
            "type": "name",
            "value": "loginname"
          }
        },
        {
          "element_id": "input_login_password",
          "label": "Password",
          "action_type": "input",
          "locator": {
            "type": "name",
            "value": "password"
          }
        },
        {
          "element_id": "login_button",
          "label": "Login Button",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//*[@id='loginFrm']/fieldset/button"
          },
          "expected_result": "Logs user in and redirects to my_account_page"
        }
      ]
    },
    {
      "variant_id": "user_logged_in_dashboard",
      "user_state": "logged_in",
      "description": "User has logged in and is viewing their account dashboard with multiple options.",
      "elements": [
        {
          "element_id": "link_edit_account",
          "label": "Edit your account information",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'Edit your account information')]"
          },
          "expected_result": "Navigates to edit_account_page"
        },
        {
          "element_id": "link_change_password",
          "label": "Change your password",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'Change your password')]"
          },
          "expected_result": "Navigates to password_change_page"
        },
        {
          "element_id": "link_address_book",
          "label": "Modify your address book entries",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'Modify your address book entries')]"
          },
          "expected_result": "Navigates to address_book_page"
        },
        {
          "element_id": "link_order_history",
          "label": "View your order history",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'View your order history')]"
          },
          "expected_result": "Navigates to order_history_page"
        },
        {
          "element_id": "link_downloads",
          "label": "Downloads",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'Downloads')]"
          },
          "expected_result": "Navigates to downloads_page"
        },
        {
          "element_id": "link_newsletter",
          "label": "Subscribe / unsubscribe to newsletter",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "//a[contains(text(), 'Subscribe / unsubscribe to newsletter')]"
          },
          "expected_result": "Navigates to newsletter_page"
        },
        {
          "element_id": "link_logout",
          "label": "Logoff",
          "action_type": "click",
          "locator": {
            "type": "xpath",
            "value": "(//a[contains(@href,'logout')])[5]"
          },
          "expected_result": "Logs user out and redirects to home_page"
        }
      ]
    }
  ]
}
